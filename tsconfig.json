{
  "include": ["vite.admin.config.js", "vite.frontend.config.js", "src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "assets",
    "src/components/ui/input.jsx",
    "src/components/ui/label.jsx"
  ],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ES2022",
    "moduleResolution": "Node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020"
  }
}
